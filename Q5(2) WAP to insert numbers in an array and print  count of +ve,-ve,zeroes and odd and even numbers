#include <stdio.h>
int main() {
    int arr[100],size,positive=0,negative=0,odd=0,even=0,zero=0;
    printf("what is the size of array\n");
    scanf("%d",&size);
    for(int i=0; i<size;i++){
    printf("enter a number to store in array\n");
    scanf("%d",&arr[i]);
}
    for(int i=0;i<size;i++){
        if(arr[i]==0){
            zero+=1;
        }
        else if(arr[i]>0){
            positive+=1;
            if(arr[i]%2==0){
                even+=1;
            }
            else{
                odd+=1;
            }
        }
        else{
            negative+=1;
        }
    }
    printf("total positive numbers: %d\ntotal negative numbers: %d\n total zeroes: %d\ntotal even numbers: %d\ntotal odd numbers: %d",positive,negative,zero,even,odd);
  
    return 0;
}

